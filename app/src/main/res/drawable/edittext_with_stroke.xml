<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background -->
    <solid android:color="@android:color/transparent" />

    <!-- Border stroke -->
    <stroke
        android:width="1dp"
        android:color="#98A1F0" />

    <!-- Rounded corners -->
    <corners android:radius="6dp" />

    <!-- Optional padding so text/buttons don't touch border -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
