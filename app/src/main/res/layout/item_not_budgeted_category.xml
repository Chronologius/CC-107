<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:background="@drawable/gradient_background2">

    <ImageView
        android:id="@+id/imgCategory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_transport"
        app:tint="@color/expenseValue" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tvNotBudgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transportation"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNotBudgetLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not set" />

        <!-- New EditText for entering budget -->
        <EditText
            android:id="@+id/editBudgetAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_enter_amount"
            android:inputType="numberDecimal"
            android:paddingTop="4dp"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSetBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_set_budget"
        android:backgroundTint="@color/primaryBlue"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_more_vert"
        android:background="@android:color/transparent"
        app:tint="@color/textPrimary" />

</LinearLayout>
