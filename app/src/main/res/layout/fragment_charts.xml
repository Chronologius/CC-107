        <com.github.mikephil.charting.charts.PieChart android:id="@+id/pieChart" android:layout_width="match_parent" android:layout_height="320dp" />
        <com.github.mikephil.charting.charts.BarChart android:id="@+id/barChart" android:layout_width="match_parent" android:layout_height="300dp" android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>