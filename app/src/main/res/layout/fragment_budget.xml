<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- Toolbar (simple) -->

    <!-- Summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="10dp">

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_budget" android:textStyle="bold"/>
            <EditText android:id="@+id/editTotalBudget" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/hint_enter_amount" android:inputType="numberDecimal" android:textColor="@color/incomeValue"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_spent" android:textStyle="bold"/>
            <EditText android:id="@+id/editTotalSpent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/hint_enter_amount" android:inputType="numberDecimal" android:textColor="@color/expenseValue"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/budgeted_categories" android:textStyle="bold" android:layout_marginTop="12dp"/>

    <!-- example budgeted card -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/bg_card" android:orientation="horizontal" android:padding="10dp" android:layout_marginTop="8dp">
        <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_food" app:tint="@color/expenseValue"/>
        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:paddingStart="10dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Food" android:textStyle="bold"/>
            <TextView android:id="@+id/tvBudgetLimit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Limit: ₱150" android:textColor="@color/primaryBlue"/>
            <TextView android:id="@+id/tvBudgetSpent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Spent: ₱100" android:textColor="@color/expenseValue"/>
        </LinearLayout>
        <ImageButton android:id="@+id/btnMore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_more_vert" android:background="@android:color/transparent" app:tint="@color/textPrimary"/>
    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/not_budgeted" android:textStyle="bold" android:layout_marginTop="12dp"/>

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerCategories" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginTop="8dp"/>

</LinearLayout>
